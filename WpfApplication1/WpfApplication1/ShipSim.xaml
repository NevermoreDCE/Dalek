<Window x:Class="WPFPathfinding.ShipSim"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShipSim" Height="1024" Width="1280" Loaded="Window_Loaded" Background="Black">
    <StackPanel Background="Black" VerticalAlignment="Top">
        <StackPanel Orientation="Horizontal">
            <StackPanel Width="820" Name="gridStack">
                <StackPanel Orientation="Horizontal" Width="820" Height="25">
                        <Button Name="btnEndTurn" Content="End Turn" Click="btnEndTurn_Click" Width="80" Margin="5 0 5 0"/>
                        <Button Name="btnFireWeapon" Content="Show Beams" Click="btnFireWeapon_Click" Width="80" Margin="5 0 5 0"/>
                </StackPanel>
                <Grid Name="g" Width="820" Height="820" HorizontalAlignment="Left" VerticalAlignment="Top" Panel.ZIndex="0"/>
                <ListBox Name="statusWindow" Height="130" Width="820" Background="Black" Foreground="WhiteSmoke"/>
                <Canvas Name="c" Width="820" Height="820" HorizontalAlignment="Left" VerticalAlignment="Top" Panel.ZIndex="80" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <StackPanel Name="spCurrentShip"></StackPanel>
                </StackPanel>
                <StackPanel>
                    <StackPanel Name="spTargetShip"></StackPanel>
                </StackPanel>
            </StackPanel>
            
        </StackPanel>
    </StackPanel>
</Window>
