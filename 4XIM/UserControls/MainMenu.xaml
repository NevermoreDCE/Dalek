<UserControl x:Class="_4XIM.UserControls.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="970" d:DesignWidth="1270">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="top" Height="385">
            <TextBlock Text="4Xim" FontSize="370" FontFamily="Impact" Foreground="Maroon"/>
        </StackPanel>
        <StackPanel Height="200" Width="150">
            <Button Name="btnNewGame" Content="New Game" Height="50" Click="btnNewGame_Click"/>
            <Button Name="btnLoadGame" Content="Load Game" Height="50"/>
            <Button Name="btnOptions" Content="Options" Height="50"/>
            <Button Name="btnExit" Content="Exit" Height="50"/>
        </StackPanel>
    </Grid>
</UserControl>
